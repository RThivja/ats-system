{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": [
            "nodejs-18_x"
          ]
        },
        "install": {
          "cmds": [
            "cd backend && npm ci"
          ]
        },
        "build": {
          "cmds": [
            "cd backend && npx prisma db push && npx prisma generate && npm run build"
          ]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "cd backend/dist && node server.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}